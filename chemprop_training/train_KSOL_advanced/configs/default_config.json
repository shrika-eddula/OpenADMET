{
  "model": {
    "hidden_size": 1600,
    "depth": 5,
    "ffn_num_layers": 3,
    "dropout": 0.2,
    "features_generator": "rdkit_2d_normalized",
    "aggregation": "mean",
    "aggregation_norm": 100
  },
  "training": {
    "epochs": 80,
    "batch_size": 64,
    "ensemble_size": 5,
    "warmup_epochs": 4,
    "max_lr": 0.001,
    "final_lr": 0.000001,
    "loss_function": "mse",
    "gradient_clip": 1.0,
    "weight_decay": 0.00001
  },
  "data": {
    "split_type": "scaffold_balanced",
    "split_ratio": [0.8, 0.1, 0.1],
    "augmentation_factor": 10,
    "seed": 42,
    "num_workers": 0
  },
  "evaluation": {
    "metrics": ["mae", "rmse", "r2", "spearman"],
    "tta_rounds": 15,
    "uncertainty_threshold": 0.5,
    "confidence_level": 0.95
  },
  "advanced": {
    "use_features": true,
    "features_scaling": true,
    "ensemble_variance": true,
    "scaffold_balance_test": false
  }
}